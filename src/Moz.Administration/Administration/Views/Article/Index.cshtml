@using Moz.Bus.Models.Articles
@model Moz.Administration.Models.Articles.IndexModel
@{
    Layout = null;
    var guid = Guid.NewGuid().ToString("N");
    var list = Newtonsoft.Json.JsonConvert.DeserializeObject<List<ArticleConfiguration>>(Model.ArticleModel.Configuration) ?? new List<ArticleConfiguration>();
}
<div class="zui-page layui-form" lay-filter="form-@guid">
    <div class="layui-card">
        <div class="layui-card-header">
            <div class="layui-form-item">

                <div class="layui-inline">
                    <label class="layui-form-label">关键字</label>
                    <div class="layui-input-inline">
                        <input type="text" name="keyword" placeholder="请输入" autocomplete="off" class="layui-input">
                    </div>
                </div>

                <div class="layui-inline">
                    <button class="layui-btn" lay-submit="" zui-event="search">
                        <i class="layui-icon layui-icon-search"></i>
                    </button>
                </div>

            </div>
        </div>
        <div class="layui-card-body">
            <div class="layui-btn-group">
                <a class="layui-btn" href="javascript:;" zui-href="@Url.Action("create", "Article",new { type = Model.Type })" zui-type="dialog" zui-width="80%" zui-height="80%" title="添加"><i class="layui-icon">&#xe654;</i> 添加</a>
            </div>
            <table class="layui-hide" id="table_@(guid)" lay-filter="table_@(guid)"></table>
        </div>
    </div>
</div>

<script type="text/html" id="toolbar_@(guid)">
    <a class="layui-btn layui-btn-normal layui-btn-xs" href="javascript:;" zui-href="@Url.Action("update", "Article")?id={{d.Id}}" zui-type="dialog"  zui-width="800px" zui-height="400px" title="编辑">
        <i class="layui-icon layui-icon-edit"></i>编辑
    </a>
    <a class="layui-btn layui-btn-danger layui-btn-xs" href="javascript:;" zui-href="@Url.Action("delete", "Article")?id={{d.Id}}" zui-type="ajax" zui-confirm="你确认删除此条信息(ID={{d.Id}})吗？">
        <i class="layui-icon layui-icon-delete"></i>删除
    </a>
</script>
<script type="text/html" id="activeTpl_@(guid)">
    {{#
    var checked = d.IsActive?"checked":"";
    }}
</script>
<script>
    layui.use(['form', 'table', 'jquery','admin','util'],
        function() {
            var form = layui.form, $ = layui.jquery, table = layui.table, admin = layui.admin, util = layui.util;
            
            form.render(null, "form-@guid");

            table.render({
                elem: '#table_@(guid)',
                url: '@Url.Action("PagedList", "Article")',
                method: 'post',
                response: { statusName: 'Code', msgName: 'Message', countName: 'Total', dataName: 'Data' },
                request: { limitName: 'pageSize' },
                cols: [
                    [
                        { type: 'checkbox' }, 
                        { field: 'Id', width: 80, title: 'ID', sort: true },
                        @foreach (var item in list)
                        {
                            if (item.IsEnable && item.IsShowedInList)
                            {
                                if (item.DisplayType == FieldTypeEnum.UploadSingleFile)
                                {
                                    
                                }
                                else if (item.DisplayType == FieldTypeEnum.DateTimeInput)
                                {
                                    <text>{ field: '@(item.FiledName)', title: '@(item.DisplayName)', width: 170}, </text>
                                }
                                else
                                {
                                    if (item.DisplayName.Contains("标题"))
                                    {
                                        <text>{ field: '@(item.FiledName)', title: '@(item.DisplayName)'}, </text>
                                    }
                                    else
                                    {
                                        <text>{ field: '@(item.FiledName)', title: '@(item.DisplayName)', width: 150 }, </text>
                                    }
                                }
                                
                            }
                        }
                        {
                             title: '操作', width: 160, toolbar: '#toolbar_@(guid)'
                        }
                    ]
                ],
                where: {
                    keyword: '',
                    ArticleModelId: @Model.Type
                },
                page: true
            });

            //监听操作
            form.on('switch(isActive_@(guid))',function(obj) {
                admin.onSwitch("@Url.Action("SetIsActive", "Permission")",{ "Id": this.value, "IsActive": obj.elem.checked },obj,form,"form-@guid");
            });

            //监听单元格编辑
            table.on('edit(table_@(guid))',function(obj) {
                var value = obj.value, data = obj.data, field = obj.field;
                admin.onCellEdit("@Url.Action("SetOrderIndex", "Permission")",{ "Id": data.Id , "OrderIndex": value });
            });

            var active = {
                getCheckData: function() { //获取选中数据
                    var checkStatus = table.checkStatus('idTest'), data = checkStatus.data;
                    layer.alert(JSON.stringify(data));
                },
                getCheckLength: function() { //获取选中数目
                    var checkStatus = table.checkStatus('idTest'), data = checkStatus.data;
                    layer.msg('选中了：' + data.length + ' 个');
                },
                isAll: function() { //验证是否全选
                    var checkStatus = table.checkStatus('idTest');
                    layer.msg(checkStatus.isAll ? '全选' : '未全选');
                },
                search: function() {
                    //执行重载
                    table.reload('table_@(guid)',
                        {
                            page: {
                                curr: 1 //重新从第 1 页开始
                            },
                            where: {
                                keyword: $("[lay-filter='form-@guid'] input[name='keyword']").val()
                            }
                        });
                }
            };

            $("[lay-filter='form-@guid'] .layui-btn[zui-event='search']").on("click",
                function() {
                    var event = $(this).attr('zui-event');
                    if (event) {
                        active[event] && active[event].call(this);
                    }
                });
        });
</script>